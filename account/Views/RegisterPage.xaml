<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="account.Views.RegisterPage"
             Title="雞帳專家-註冊">
    <StackLayout Padding="20">
        <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*" Margin="0,0,0,20">
            <Label Text="名字" VerticalOptions="Center" Grid.Row="0" Grid.Column="0"/>
            <Entry x:Name="UNameEntry" Placeholder="輸入名字" Grid.Row="0" Grid.Column="1"/>

            <Label Text="帳號" VerticalOptions="Center" Grid.Row="1" Grid.Column="0"/>
            <Entry x:Name="UIDEntry" Placeholder="輸入帳號" Grid.Row="1" Grid.Column="1"/>

            <Label Text="密碼" VerticalOptions="Center" Grid.Row="2" Grid.Column="0"/>
            <Entry x:Name="UPwdEntry" Placeholder="輸入密碼" IsPassword="True" Grid.Row="2" Grid.Column="1"/>

            <Label Text="確認密碼" VerticalOptions="Center" Grid.Row="3" Grid.Column="0"/>
            <Entry x:Name="UPwd2Entry" Placeholder="再次輸入密碼" IsPassword="True" Grid.Row="3" Grid.Column="1"/>
        </Grid>

        <Button Text="註冊" Clicked="Register_Clicked"/>
    </StackLayout>
    <!--<VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>-->
</ContentPage>